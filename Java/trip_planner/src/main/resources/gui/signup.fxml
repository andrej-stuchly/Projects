<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="logic.signupController"
      prefHeight="330.0" prefWidth="440.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Create an Account" styleClass="title"/>

    <HBox>
        <Label text="Username:" />
        <TextField fx:id="username" />
    </HBox>

    <HBox>
        <Label text="Password:" />
        <PasswordField fx:id="password" />
    </HBox>

    <HBox>
        <Label text="Confirm password:" />
        <PasswordField fx:id="password2" />
    </HBox>

    <Region minHeight="10"/>

    <HBox>
        <Button text="Sign Up" onAction="#onClickSignUp" styleClass="button"/>
        <Button text="Log in" onAction="#openLoginScene" styleClass="button"/>
    </HBox>
</VBox>

