<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.PasswordField?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="logic.loginController"
      prefHeight="330.0" prefWidth="440.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Log into Account" styleClass="title"/>

    <HBox>
        <Label text="Username:" styleClass="label" />
        <TextField fx:id="username" styleClass="text-field" />
    </HBox>

    <HBox>
        <Label text="Password:" styleClass="label" />
        <PasswordField fx:id="password" styleClass="text-field" />
    </HBox>

    <HBox>
        <Button text="Log In" onAction="#onClickLogIn" styleClass="button"/>
        <Button text="Sign Up" onAction="#openSignUpScene" styleClass="button"/>
    </HBox>
</VBox>
